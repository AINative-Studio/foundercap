# ====================================
# Application Settings
# ====================================

# Application
ENVIRONMENT=development  # development, staging, production
DEBUG=True
TZ=UTC

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days

# API
API_V1_STR=/api/v1
API_DOCS_URL=/docs
API_REDOC_URL=/redoc
ENABLE_SWAGGER_UI=True
ENABLE_REDOC=False

# CORS (comma-separated list of allowed origins, no spaces)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT=100/minute

# ====================================
# Database Settings
# ====================================

# PostgreSQL
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=foundercap

# Connection Pool Settings
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_RECYCLE=3600  # 1 hour

# ====================================
# Redis Settings
# ====================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ====================================
# Celery Settings
# ====================================

# Celery Broker (Redis by default)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Task Settings
CELERY_TASK_TIME_LIMIT=1800  # 30 minutes
CELERY_TASK_SOFT_TIME_LIMIT=1500  # 25 minutes

# ====================================
# External API Keys
# ====================================

# Crunchbase
CRUNCHBASE_API_KEY=your-crunchbase-api-key
CRUNCHBASE_API_URL=https://api.crunchbase.com/api/v4

# LinkedIn (for web scraping)
LINKEDIN_EMAIL=your-linkedin-email
LINKEDIN_PASSWORD=your-linkedin-password  # Consider using app passwords

# ====================================
# Web Scraping Settings
# ====================================

REQUEST_TIMEOUT=30  # seconds
MAX_RETRIES=3
RETRY_DELAY=5  # seconds

# ====================================
# Logging
# ====================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
